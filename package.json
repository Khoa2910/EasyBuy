{
  "name": "tmdt-ecommerce",
  "version": "1.0.0",
  "description": "Comprehensive E-commerce Platform for Home Goods",
  "main": "api-gateway/server.js",
  "scripts": {
    "start": "node api-gateway/server.js",
    "start:product": "node services/product-service/server.js",
    "start:auth": "node services/auth-service/server.js",
    "start:order": "node services/order-service/server.js",
    "start:user": "node services/user-service/server.js",
    "start:payment": "node services/payment-service/server.js",
    "start:all": "node start-all-services.js",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:payment\" \"npm run dev:order\"",
    "dev:gateway": "nodemon api-gateway/server.js",
    "dev:auth": "nodemon services/auth-service/server.js",
    "dev:user": "nodemon services/user-service/server.js",
    "dev:product": "nodemon services/product-service/server.js",
    "dev:payment": "nodemon services/payment-service/server.js",
    "dev:admin": "nodemon services/admin-service/server.js",
    "dev:search": "nodemon services/search-service/server.js",
    "dev:chat": "nodemon services/chat-service/server.js",
    "dev:order": "nodemon services/order-service/server.js",
    "dev:notification": "nodemon services/notification-service/server.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "jest",
    "test:load": "artillery run load-tests/load-test.yml"
  },
  "keywords": [
    "ecommerce",
    "microservices",
    "nodejs",
    "mysql",
    "redis"
  ],
  "author": "TMDT Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "stripe": "^14.9.0",
    "twilio": "^4.19.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "artillery": "^2.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
